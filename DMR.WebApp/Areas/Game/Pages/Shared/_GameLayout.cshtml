@{
    ViewData["Brand"] = "DMR";
    ViewData["NavbarId"] = string.Empty;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @ViewData["Brand"]</title>

    <partial name="_MainStylesPartial" />
    <partial name="_GameStylesPartial" />
</head>
<body id="erpge">
    <partial name="_NavbarAreaPartial" />
    @*<partial name="_NavbarGamePartial" />*@

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        <div class="row">
            <div class="col-3">
                <partial name="_SidebarGamePartial" />
            </div>
            <div class="col-9">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; 2021 - BootleySqueeDoodle</p>
                </footer>
            </div>
        </div>
    </div>

    <partial name="_MainScriptsPartial" />

    @RenderSection("Scripts", required: false)
</body>
</html>
